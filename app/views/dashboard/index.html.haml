- content_for :header do
  %a.btn.pull-right.primary{ href: "#" } Add Ticket
  %ul.tabs
    %li.dropdown{ data: { dropdown: "dropdown" } }
      = link_to "Show Views", "#", class: "dropdown-toggle", id: "show_all"
      %ul.dropdown-menu
        %li
          = link_to "#" do
            %input{ type: "checkbox" }
            Current
        %li= link_to "Done", "#"
        %li= link_to "IceBox", "#"
        %li.divider
        %li= link_to "Show All", "#"
    %li= link_to "Stream", "#"
    %li.active= link_to "Tickets", "#"
    %li= link_to "Team", "#"
    %li= link_to "Dropbox", "#"
    %li= link_to "Settings", "#"
%table.spaces
  %tr
    - 3.times do |index|
      %td
        .space
          .toolbar
            .move &nbsp;
            %span.title Current #{index}
            .act
              %a.expand{ href: "#" } Expand all
              %a.collapse{ href: "#" } Collapse all
              %a.close{ href: "#" } Close
          .inner
            .nano
              .content
                - (rand * 20).round.times do
                  .ticket
                    .list
                      .pull-right
                        %a.button{ href: "#" } Start
                        .split
                        = link_to image_tag("http://www.gravatar.com/avatar/205e460b479ese5b48aec07710c08d50?s=21"), "#", class: "avatar"
                      %a.expand{ href: "#" } Expand
                      %span Test
                        
                    .block
                      %a.collapse{ href: "#" } Collapse
                      %form.form
                        .field
                          %input{ type: "text", placeholder: "Enter ticket title here" }
                        .field.divider
                          %a.btn.small.primary{ href: "#" } Save
                          %a.btn.small{ href: "#" } Cancel
                          %a.btn.small.danger{ href: "#" } Destroy
                          %a.btn.small.info{ href: "#" } View History
                        .field
                          %select
                            - 20.times do |index|
                              %option User #{index}
                          %span.hint requested this ticket on #{l(Time.zone.now, format: :short)}
                        .field.divider
                          %select
                            - 20.times do |index|
                              %option User #{index}
                          %span.hint own this ticket
                        .field
                          %label Labels:
                          %input{ type: "text", placeholder: "Enter labels here" }
                          
                        .field
                          %label Description:
                          %textarea{ rows: 5 }
                    .clear
                .end